{
  "name": "typescript-library-boilerplate",
  "version": "1.0.0",
  "description": "boilerplate for typescript library development, includes linting, testing, coverage etc.",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "test": "node ./config/test-runner.js",
    "coverage": "istanbul cover ./config/test-runner.js",
    "lint": "tslint --force -c ./config/tslint.json 'src/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peter-ikin/typescript-library-boilerplate.git"
  },
  "keywords": [
    "typescript",
    "boilerplate"
  ],
  "author": "Peter Ikin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/peter-ikin/typescript-library-boilerplate/issues"
  },
  "homepage": "https://github.com/peter-ikin/typescript-library-boilerplate#readme",
  "devDependencies": {
    "@types/jasmine": "^2.5.41",
    "@types/node": "^7.0.4",
    "istanbul": "^0.4.5",
    "jasmine": "^2.5.3",
    "jasmine-console-reporter": "^1.2.7",
    "tslint": "^4.4.2",
    "typescript": "^2.1.5"
  }
}
